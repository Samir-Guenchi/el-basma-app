{
  "expo": {
    "name": "Djellaba El Basma",
    "slug": "djellaba-el-basma",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#D4436A"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.djellaba.elbasma",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take product photos.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photos to upload product images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#D4436A"
      },
      "package": "com.djellaba.elbasma",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-localization"
    ],
    "extra": {
      "eas": {
        "projectId": "bbaa9a73-d8ec-4ee0-816c-c2505f34613b"
      }
    }
  }
}
